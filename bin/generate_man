function gen_man() {
   safe_string=$(echo "$*" | sed -e 's/[^A-Za-z0-9-]/-/g')
   filename="man/${safe_string}.1"
   temp_filename="man/temp-${safe_string}.1"

   # Get the "about" from the help. This will be used in NAME in the manpage
   help_output=$(./target/debug/$* --help)
   name_description=$(echo "$help_output" | awk "/${safe_string}/{flag=1; next;} /USAGE/{flag=0;} flag")

   echo "Generating: $filename"
   help2man "target/debug/$*" -o $temp_filename --name "$name_description" --include man/see_also.h2m \
      --include man/${safe_string}.h2m  $include --no-info

   # move DEATAILS to a section header
   # Replace title heading
   # Move all generated subsection to section headers
   sed -e  "s/DETAILS/.SH DETAILS/" \
   -e "s/^\.TH/.TH \"${safe_string}\" \"1\" \"Cargill, Incorporated\" \"Splinter Commands\" \"Splinter Commands\"/" \
   -e "s/.SS/.SH/" $temp_filename > $filename
   rm $temp_filename
}


export PATH=$PATH:$(pwd)/bin
mkdir -p man

gen_man splinter cert generate
# gen_man splinter cert
